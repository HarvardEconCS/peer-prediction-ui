div.exitsurvey
  margin 0 auto
  position relative
  width 800px
  height 750px

div.exitsurvey h3
  text-align center

div.exitsurvey img
  vertical-align middle
div.exitsurvey  label
  line-height 35px

div.exitsurvey div#exitErrorMsg
  display none
  border 3px solid black
  position absolute
  width 500px
  top 300px
  left 120px
  background-color #C0B5B5
  font-weight bold
  
div.exitsurvey textarea[disabled]
  background-color #CBC8C8