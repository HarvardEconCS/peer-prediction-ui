.main
  margin 0 auto
  
div.task
  margin   0 auto
  position relative
  width    1024px
  height   768px

taskTitleTop = 10px
div#task-title 
  position   absolute
  top        taskTitleTop 
  left       0px
  width      1024px
  height     25px
  font-size  17px
  
taskStatusTop = 53px
div#task-status 
  position   absolute
  top        taskStatusTop  
  left       200px
  width      1024px
  height     25px
  font-size  19px  
  
roundIndexTop    = 77px
roundStepsLeft   = 0px
roundStepsWidth  = 450px
roundIndexHeight = 25px
div#task-roundIndex
  position  absolute
  top       roundIndexTop
  left      roundStepsLeft
  width     roundStepsWidth
  height    roundIndexHeight
  font-size 18px
  
step1Height  = 120px
step1Top = roundIndexTop + roundIndexHeight
div#task-step1
  position  absolute
  top       step1Top
  left      roundStepsLeft
  width     roundStepsWidth
  height    step1Height
  border-top 2px solid #6678b1
  font-size 18px
div#task-step1pic
  z-index   0 
  position  absolute
  top       step1Top + 25px
  left      25px
  width     250px

step2Height  = 100px
step2Top = step1Top + step1Height
div#task-step2
  position  absolute
  top       step2Top
  left      roundStepsLeft
  width     roundStepsWidth
  height    step2Height
  border-top 2px solid #6678b1
  font-size 18px


step3Height  = 110px  
step3Top = step2Top + step2Height
div#task-step3
  position   absolute
  top        step3Top
  left       roundStepsLeft
  width      roundStepsWidth
  height     step3Height  
  border-top 2px solid #6678b1
  font-size  18px
  
ruleTableTop = 300px
ruleTableLeft = 230px
div#task-ruleTable
  z-index   0
  position  absolute
  top       step3Top + 20px
  left      ruleTableLeft


div#finishmsg
  position absolute
  top      50px
  left     100px
  font-size 19px


resultTop  = 80px
resultLeft = 500px
div#result-header
  position absolute
  top      resultTop
  left     resultLeft


resultHeaderHeight = 90px
resultBodyTop      = resultTop + resultHeaderHeight
resultBodyHeight   = 300px
div#result-body
  z-index     0
  position    absolute
  top         resultBodyTop
  left        resultLeft
  height      resultBodyHeight
  overflow-y  scroll
  
div#avgreward
  position    absolute
  top         resultBodyTop + resultBodyHeight
  left        resultLeft + 260px
  height      50px
  font-size   20px
  font-weight bold
    

