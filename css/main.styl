.main
  margin 0 auto
  
.task
  margin 0 auto
  position relative
  width   1000px
  height  750px

generalInfoTop = 20px
generalInfoHeight = 40px
yourSignalHeight = 60px
yourReportHeight = 110px
gap = 50px

.generalInfo
  position absolute
  top       generalInfoTop
  left      0px
  width     270px
  
.task-yourSignal
  position  absolute
  top       generalInfoTop + generalInfoHeight
  left      30px
  width     180px
  height    60px
  border-left 2px dashed gray
  border-right 2px dashed gray
  border-top 2px dashed gray

.task-yourReport
  position  absolute
  top       generalInfoTop + generalInfoHeight + yourSignalHeight
  left      30px
  width     180px
  border-left 2px dashed gray
  border-right 2px dashed gray
  border-bottom 2px dashed gray

.ruleTable
  z-index   0
  position  absolute
  top       generalInfoTop + generalInfoHeight + yourSignalHeight + yourReportHeight + gap
  left      0px
  width     250px

resultTableHeaderHeight = 135px
resultTableHeaderTop = 10px

.resultTableHeader
  position absolute
  top      resultTableHeaderTop
  left      280px

.resultTable
  z-index   0
  position  absolute
  top       resultTableHeaderTop + resultTableHeaderHeight
  left      280px
  height    300px
  overflow-y scroll
  
  

