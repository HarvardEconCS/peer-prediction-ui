.main
  margin 0 auto
  
div.task
  margin   0 auto
  position relative
  width    1024px
  height   768px

taskTitleTop = 50px

div.taskTitle 
  position   absolute
  top        taskTitleTop 
  left       0px
  width      1024px
  height     25px
  text-align center
  

roundStepsLeft  = 0px
roundStepsWidth = 450px

roundIndexHeight = 25px
step1Height  = 120px
step2Height  = 100px
step3Height  = 110px

roundIndexTop = 80px

div.task-roundIndex
  position  absolute
  top       roundIndexTop
  left      roundStepsLeft
  width     roundStepsWidth
  height    roundIndexHeight
  
step1Top = roundIndexTop + roundIndexHeight
  
div.task-chooseHouse
  position  absolute
  top       step1Top
  left      roundStepsLeft
  width     roundStepsWidth
  height    step1Height
  border-top 2px solid #6678b1

div.step1PicDiv
  z-index   0 
  position  absolute
  top       step1Top + 20px
  left      25px
  width     250px

step2Top = step1Top + step1Height

div.task-chooseYourSignal
  position  absolute
  top       step2Top
  left      roundStepsLeft
  width     roundStepsWidth
  height    step2Height
  border-top 2px solid #6678b1

step3Top = step2Top + step2Height

div.task-chooseYourClaim
  position  absolute
  top       step3Top
  left      roundStepsLeft
  width     roundStepsWidth
  height    step3Height  
  border-top 2px solid #6678b1
  
ruleTableTop = 300px
ruleTableLeft = 230px

div.ruleTable
  z-index   0
  position  absolute
  top       step3Top + 20px
  left      ruleTableLeft
  width     250px


div#finishmsg
  position absolute
  top   50px
  left  100px


resultTop  = 80px
resultLeft = 500px

div.resultTableHeader
  position absolute
  top      resultTop
  left     resultLeft

resultHeaderHeight = 90px
resultBodyTop = resultTop + resultHeaderHeight
resultBodyHeight = 400px

div.resultTableBody
  z-index     0
  position    absolute
  top         resultBodyTop
  left        resultLeft
  height      resultBodyHeight
  overflow-y  scroll
  
div.avgreward
  position  absolute
  top       resultBodyTop + resultBodyHeight
  left      resultLeft + 255px
  height    50px
    

