.main
  margin 0 auto
  
.task
  margin 0 auto
  position relative
  width   1024px
  height  768px



div.taskTitle 
  position absolute
  top       20px
  left      0px
  width     1024px
  height    25px
  text-align center
  

infoHeight    = 25px
houseHeight   = 120px
signalHeight  = 100px
reportHeight  = 110px
gap = 30px
leftGameInfo = 0px

topGenInfo       = 48px

currGameWidth = 450px


div.task-gameIndex
  position  absolute
  top       topGenInfo
  left      leftGameInfo
  width     currGameWidth
  height    infoHeight
  
topChosenHouse = topGenInfo + infoHeight
  
div.task-chosenHouse
  position  absolute
  top       topChosenHouse
  left      leftGameInfo
  width     currGameWidth
  height    houseHeight
  border-top 2px solid #6678b1

topSignal = topChosenHouse + houseHeight

div.task-yourSignal
  position  absolute
  top       topSignal
  left      leftGameInfo
  width     currGameWidth
  height    signalHeight
  border-top 2px solid #6678b1

topReport = topSignal + signalHeight

div.task-yourReport
  position  absolute
  top       topReport
  left      leftGameInfo
  width     currGameWidth
  height    reportHeight  
  border-top 2px solid #6678b1
  

infoLeft = 230px

div.info-house
  z-index   0 
  position  absolute
  top       topChosenHouse + 30px
  left      50px
  width     250px

ruleTableTop = 300px

div.ruleTable
  z-index   0
  position  absolute
  top       topReport + 20px
  left      infoLeft
  width     250px





resultTop = 50px
resultHeaderHeight = 90px
resultLeft = 500px

div.resultTableHeader
  position absolute
  top      resultTop
  left     resultLeft

resultTableBodyTop = resultTop + resultHeaderHeight

div.resultTableBody
  z-index   0
  position  absolute
  top       resultTableBodyTop
  left      resultLeft
  height    300px
  overflow-y scroll
  
div.avgreward
  position  absolute
  top       resultTableBodyTop + 300px
  left      resultLeft + 250px
  height    50px
  
  
div#finishmsg
  position absolute
  top   50px
  left  100px
