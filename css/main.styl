.main
  margin 0 auto
  
.task
  margin 0 auto
  position relative
  width   1000px
  height  750px

infoTop    = 20px
infoHeight = 40px
signalHeight  = 60px
reportHeight  = 110px
gap = 50px

.generalInfo
  position absolute
  top       infoTop
  left      0px
  width     350px
  z-index  3
  
.task-yourSignal
  position      absolute
  top           infoTop + infoHeight
  left          30px
  width         180px
  height        60px
  border-left   2px dashed gray
  border-right  2px dashed gray
  border-top    2px dashed gray

.task-yourReport
  position      absolute
  top           infoTop + infoHeight + signalHeight
  left          30px
  width         180px
  border-left   2px dashed gray
  border-right  2px dashed gray
  border-bottom 2px dashed gray

.ruleTable
  z-index   0
  position  absolute
  top       infoTop + infoHeight + signalHeight + reportHeight + gap
  left      0px
  width     250px

resultTableHeaderHeight = 135px
resultTableHeaderTop = 10px

.resultTableHeader
  position absolute
  top      resultTableHeaderTop
  left      280px

.resultTable
  z-index   0
  position  absolute
  top       resultTableHeaderTop + resultTableHeaderHeight
  left      280px
  height    300px
  overflow-y scroll
  
  

