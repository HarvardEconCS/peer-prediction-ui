// Results table
table.results
  table-layout fixed


table.results td
  text-align  center
  border-left   2px white solid
  border-right  2px white solid
  width 65px
  height 55px

table.results td.leftb
  border-left 2px solid #6678b1

table.results tr.borderAroundDashed td
  border-top 2px black dashed 
  border-bottom 2px black dashed 

table.results td.borderLeftDashed
  border-left 2px black dashed 

table.results td.borderRightDashed
  border-right 2px black dashed 


// Payment rule table in result div
table.rule
  margin 0 auto
  border-collapse: collapse
  padding 0px 10px
  table-layout fixed

table.rule caption
  padding 0px 0px 15px 0px
  font-weight bold
  
table.rule th   
  border-bottom 2px solid #6678b1
  text-align center

table.rule td
  border-bottom 1px solid #6678b1
  text-align center
  height 30px

table.rule th.leftb, td.leftb
  border-left 2px solid #6678b1

.colRuleYourReport,.colRuleOtherReport
  width 100px
  
.colRuleYourReward
  width 100px




  
// Style the hyperlinks as buttons
a.button
  padding 6px 9px
  background #4479BA
  color #FFF
  -webkit-border-radius 4px
  -moz-border-radius 4px
  border-radius 4px
  border solid 1px #20538D
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.4)
  -webkit-box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2)
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
  -webkit-transition-duration 0.2s
  -moz-transition-duration 0.2s
  transition-duration 0.2s
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

a.button:hover, a.button:focus
  background: #356094;
  border: solid 1px #2A4E77;
  text-decoration: none;  
  
a.button:active
  -webkit-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
  -moz-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
  box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
  background: #2E5481;
  border: solid 1px #203E5F;
