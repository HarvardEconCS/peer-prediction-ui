// Payment rule table
table.rule
  border-collapse: collapse
  table-layout fixed
  
table.rule caption
  padding-bottom 10px
  font-weight bold
  font-size   17px
  
table.rule th   
  font-size   16px
  text-align  center
  border-bottom 2px solid #6678b1

table.rule td
  border-bottom 1px solid #6678b1
  text-align  center
  font-size   19px

table.rule th.leftb, td.leftb
  border-left 2px solid #6678b1

col.colRuleYourReport
col.colRuleOtherReport
col.colRuleYourReward
  width 75px



// Results table header
table.resultsHeader
  table-layout fixed

table.resultsHeader caption
  font-size   17px
  font-weight bold


table.resultsHeader th
  width   65px
  height  60px
  font-size 17px
  border-top    2px solid #6678b1
  border-bottom 2px solid #6678b1
  border-left   2px white solid
  border-right  2px white solid

table.resultsHeader th img
  vertical-align middle

table.resultsHeader th.leftb
  border-left 2px solid #6678b1

table.resultsHeader th.aggInfo
  width 200px



// Results table content
table.results
  table-layout fixed

table.results td
  text-align    center
  border-left   2px white solid
  border-right  2px white solid
  width         65px
  height        50px
  font-size     19px

table.results td.leftb
  border-left 2px solid #6678b1

table.results tr.borderAroundDashed td
  border-top    2px black dashed 
  border-bottom 2px black dashed 

table.results td.borderLeftDashed
  border-left 2px black dashed 
  
table.results td.borderRightDashed
  border-right 2px black dashed 
  
table.results td.aggInfo
  font-size 20px
  width     200px
  vertical-align middle

table.results td.aggInfo img
  vertical-align middle





  
