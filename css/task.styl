.textBold
  font-weight bold

div#claimresult
div#claimchoices
div#claimbutton
  line-height 35px

// Payment rule table
div#task-ruleTable
  border-collapse collapse
  table-layout fixed
  
div#task-ruleTable caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold

div#task-ruleTable th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1

div#task-ruleTable td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1

div#task-ruleTable th.leftb, td.leftb
  border-left 2px solid #6678b1

div#task-ruleTable col.colRuleYourReport
div#task-ruleTable col.colRuleOtherReport
div#task-ruleTable col.colRuleYourReward
  width 75px

// Results table header
div#result-header
  table-layout fixed
div#result-header caption
  font-size   17px
  font-weight bold
div#result-header th
  width   65px
  height  60px
  font-size 17px
  border-top    2px solid #6678b1
  border-bottom 2px solid #6678b1
  border-left   2px white solid
  border-right  2px white solid
div#result-header th img
  vertical-align middle
div#result-header th.leftb
  border-left 2px solid #6678b1
div#result-header th.otherClaims
  width 200px

// Results table content
div#result-body
  table-layout fixed
div#result-body td
  text-align    center
  border-left   2px white solid
  border-right  2px white solid
  width         65px
  height        50px
  font-size     19px
div#result-body td.leftb
  border-left 2px solid #6678b1
div#result-body tr.borderAroundDashed td
  border-top    2px black dashed 
  border-bottom 2px black dashed 
div#result-body td.borderLeftDashed
  border-left 2px black dashed 
div#result-body td.borderRightDashed
  border-right 2px black dashed 
div#result-body td.otherClaims
  font-size 20px
  width     200px
  vertical-align middle
div#result-body td.otherClaims img
  vertical-align middle
  
  
  