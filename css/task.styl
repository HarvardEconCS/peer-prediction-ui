span.textBold
  font-weight bold

div#claimresult
div#claimprompt
div#claimchoices
div#claimbutton
  line-height 35px



// Payment rule table
div#task-ruleTable
  border-collapse collapse
  table-layout fixed
  
div#task-ruleTable caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold

div#task-ruleTable th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1

div#task-ruleTable td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1

div#task-ruleTable th.leftb, td.leftb
  border-left 2px solid #6678b1

div#task-ruleTable col.colRuleYourReport
div#task-ruleTable col.colRuleOtherReport
div#task-ruleTable col.colRuleYourReward
  width 75px



// Results table header
div#resultTableHeader
  table-layout fixed

div#resultTableHeader caption
  font-size   17px
  font-weight bold

div#resultTableHeader th
  width   65px
  height  60px
  font-size 17px
  border-top    2px solid #6678b1
  border-bottom 2px solid #6678b1
  border-left   2px white solid
  border-right  2px white solid

div#resultTableHeader th img
  vertical-align middle

div#resultTableHeader th.leftb
  border-left 2px solid #6678b1

div#resultTableHeader th.otherClaims
  width 200px



// Results table content
table.results
  table-layout fixed

table.results td
  text-align    center
  border-left   2px white solid
  border-right  2px white solid
  width         65px
  height        50px
  font-size     19px

table.results td.leftb
  border-left 2px solid #6678b1

table.results tr.borderAroundDashed td
  border-top    2px black dashed 
  border-bottom 2px black dashed 

table.results td.borderLeftDashed
  border-left 2px black dashed 
  
table.results td.borderRightDashed
  border-right 2px black dashed 
  
table.results td.otherClaims
  font-size 20px
  width     200px
  vertical-align middle

table.results td.otherClaims img
  vertical-align middle
  
  