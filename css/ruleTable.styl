// Payment rule table
div.ruleTable
  border-collapse collapse
  table-layout fixed
  width 250px
  
div.ruleTable caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold

div.ruleTable th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1

div.ruleTable td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1

div.ruleTable th.leftb, td.leftb
  border-left 2px solid #6678b1

div.ruleTable .bottomb
  border-bottom 2px solid #6678b1

div.ruleTable .nobottomb
  border none

div.ruleTable col.colRuleYourReport
div.ruleTable col.colRuleOtherReport
div.ruleTable col.colRuleYourReward
  width 75px    
