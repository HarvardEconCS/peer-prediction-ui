div.tutorialCont
  margin 0 auto
  position relative
  width 1024px
  height 750px

div.step
div.image
img.image
div#ruleTableTutorial
div#interfaceTutorial
#int-task-step2-v2
#int-task-step3-v2
#int-task-step3-v3
#t-showcandy
#t-showclaim
#r-finishedround
#r-nextgame
#int-task-roundIndex-v2
#r-endgame
#r-2ndrow
#int-result-body-v2
#int-finishmsg
  display none

div.tutorial
  position  absolute
  top       50px
  left      10px
  width     300px
  height    300px
  text-align center

div.tutorial .step
  border 6px outset #B8E9B8
  padding 10px 4px 2px 4px
  background-color #E4F7E4
  
div#ruleTableTutorial
  z-index 5
  position absolute
  width 250px
 
    
///////////////////////////////////////       
// Payment rule table
div#ruleTableTutorial
  border-collapse collapse
  table-layout fixed
  
div#ruleTableTutorial caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold

div#ruleTableTutorial th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1

div#ruleTableTutorial td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1

div#ruleTableTutorial th.leftb, td.leftb
  border-left 2px solid #6678b1

div#ruleTableTutorial col.colRuleYourReport
div#ruleTableTutorial col.colRuleOtherReport
div#ruleTableTutorial col.colRuleYourReward
  width 75px    
    
    
///////////////////////////////////////    
// Interface of game    
div#int-claimresult
div#int-claimchoices
div#int-claimbutton
  line-height 35px

div#int-finishmsg
  position absolute
  top      50px
  left     100px


down = 20px
right = 10px

intTaskTitleTop = 50px + down 
intTaskTitleLeft = 0px + right
div#int-task-title 
  position   absolute
  top        intTaskTitleTop  
  left       intTaskTitleLeft
  width      1024px
  height     25px
  text-align center
  font-size  19px    
    
intRoundIndexTop    = 80px + down
intRoundStepsLeft   = 0px + right
intRoundStepsWidth  = 450px
intRoundIndexHeight = 25px
div.roundnumber
  position  absolute
  top       intRoundIndexTop
  left      intRoundStepsLeft
  width     intRoundStepsWidth
  height    intRoundIndexHeight
  font-size 18px   
    
intStep1Height  = 120px
intStep1Top     = intRoundIndexTop + intRoundIndexHeight 
div#int-task-step1
  position    absolute
  top         intStep1Top
  left        intRoundStepsLeft
  width       intRoundStepsWidth
  height      intStep1Height
  border-top  2px solid #6678b1
  font-size   18px
div#int-task-step1pic
  z-index   0 
  position  absolute
  top       intStep1Top + 20px
  left      25px
  width     250px    

intStep2Height = 100px
intStep2Top = intStep1Top + intStep1Height
div.step2
  position   absolute
  top        intStep2Top 
  left       intRoundStepsLeft   
  width      intRoundStepsWidth  
  height     intStep2Height 
  border-top 2px solid #6678b1
  font-size  18px
div.step2 img
  vertical-align middle
div.step2 span
  line-height 40px    

intStep3Height = 110px  
intStep3Top = intStep2Top + intStep2Height 
div.step3
  position   absolute
  top        intStep3Top
  left       intRoundStepsLeft
  width      intRoundStepsWidth
  height     intStep3Height  
  border-top 2px solid #6678b1
  font-size  18px
div.step3 img
  vertical-align middle    
    
intRuleTableTop = 300px + down
intRuleTableLeft = 230px + right
div#int-task-ruleTable
  z-index   0
  position  absolute
  top       intStep3Top + 20px
  left      intRuleTableLeft 
  width     250px
div#int-task-ruleTable
  border-collapse collapse
  table-layout fixed
div#int-task-ruleTable caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold
div#int-task-ruleTable th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1
div#int-task-ruleTable td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1
div#int-task-ruleTable th.leftb, td.leftb
  border-left 2px solid #6678b1
div#int-task-ruleTable col.colRuleYourReport
div#int-task-ruleTable col.colRuleOtherReport
div#int-task-ruleTable col.colRuleYourReward
  width 75px
    
intResultTop  = 80px + down
intResultLeft = 500px + right
div#int-result-header
  position absolute
  top      intResultTop
  left     intResultLeft
div#int-result-header
  table-layout fixed
div#int-result-header caption
  font-size   17px
  font-weight bold
div#int-result-header th
  width   65px
  height  60px
  font-size 17px
  border-top    2px solid #6678b1
  border-bottom 2px solid #6678b1
  border-left   2px white solid
  border-right  2px white solid
div#int-result-header th img
  vertical-align middle
div#int-result-header th.leftb
  border-left 2px solid #6678b1
div#int-result-header th.otherClaims
  width 200px    
    
intResultHeaderHeight = 90px
intResultBodyTop      = intResultTop + intResultHeaderHeight
intResultBodyHeight   = 400px
div#int-result-body
div#int-result-body-v2
  z-index     0
  position    absolute
  top         intResultBodyTop
  left        intResultLeft
  height      intResultBodyHeight
  overflow-y  scroll    
div.resultbody
  table-layout fixed
div.resultbody td
  text-align    center
  border-left   2px white solid
  border-right  2px white solid
  width         65px
  height        50px
  font-size     19px
div.resultbody td.leftb
  border-left   2px solid #6678b1
div.resultbody tr.borderAroundDashed td
  border-top    2px black dashed 
  border-bottom 2px black dashed 
div.resultbody td.borderLeftDashed
  border-left   2px black dashed 
div.resultbody td.borderRightDashed
  border-right  2px black dashed 
div.resultbody td.otherClaims
  font-size 20px
  width     200px
  vertical-align middle
div.resultbody td.otherClaims img
  vertical-align middle    

div#int-avgreward
  position    absolute
  top         intResultBodyTop + intResultBodyHeight
  left        intResultLeft + 255px
  height      50px
  font-size   20px
  font-weight bold

    
        
img#eg-MM-MM
img#eg-MM-GB
img@eg-GB-MM
  z-index 5
  position absolute
    
