div.tutorialController
  margin 0 auto
  position relative
  width 1000px
  height 750px

div.step
div.image
img.image
  display none

div.tutorial
  position  absolute
  top       50px
  left      60px
  width     300px
  height    300px
  text-align center

div.tutorial .step
  border 6px outset #B8E9B8
  padding 20px 10px 2px 10px
  background-color #E4F7E4
  
a.help:link,a.help:visited,a.help:hover
  text-decoration none
  color #000000

a.help
  cursor help

div.step img
  vertical-align middle  

span.emph
  font-style italic
  font-weight bold
  
li
  text-align left
  
div#help-wrap
  position absolute
  background-color white
  left 500px

div#help-block
  position relative
  width 400px
  margin 0 auto
  padding 10px 0px
  
div#help-content
  padding 10px 0px
  display none

div#help-tab
  position absolute
  right   -20px
  bottom   -30px
  width   100px
  height  50px
