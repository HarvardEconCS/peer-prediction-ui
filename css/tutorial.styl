div.tutorialCont
  margin 0 auto
  position relative
  width 1024px
  height 750px

div.tutorial div.step
div.tutorialCont img.image
div#ruleTableTutorial
div#interfaceTutorial
#int-task-step2-v2
#int-task-step3-v2
#t-showcandy
#t-showclaim
#r-endgame
#int-result-body-v2
#int-finishmsg
#status-getcandy
#int-task-status-getcandy
#int-task-status-confirmclaim
  display none

div.tutorial
  position  absolute
  top       50px
  left      -10px
  width     320px
  height    300px
  text-align center

div.tutorial .step
  border 6px outset #B8E9B8
  padding 10px 4px 2px 4px
  background-color #E4F7E4

div#ruleTableTutorial
  position absolute
  width 250px
  z-index 5

///////////////////////////////////////
// Interface of game

div#int-finishmsg
  position absolute
  top      50px
  left     100px
  font-size 19px

down  = 0px
right = 0px

intTaskTitleTop = 10px + down
intTaskTitleLeft = 0px + right
div#int-task-title
  position   absolute
  top        intTaskTitleTop
  left       intTaskTitleLeft
  width      1024px
  height     25px
  font-size  17px

intTaskStatusTop = 53px + down
div.statusmessage
  position   absolute
  top        intTaskStatusTop
  left       200px + right
  width      1024px
  height     25px
  font-size  19px

intRoundIndexTop    = 77px + down
intRoundStepsLeft   = 0px + right
intRoundStepsWidth  = 450px
intRoundIndexHeight = 25px
div.roundnumber
  position  absolute
  top       intRoundIndexTop
  left      intRoundStepsLeft
  width     intRoundStepsWidth
  height    intRoundIndexHeight
  font-size 18px

intStep1Height  = 120px
intStep1Top     = intRoundIndexTop + intRoundIndexHeight
div#int-task-step1
  position    absolute
  top         intStep1Top
  left        intRoundStepsLeft
  width       intRoundStepsWidth
  height      intStep1Height
  border-top  2px solid #6678b1
  font-size   18px
div#int-task-step1pic
  z-index   0
  position  absolute
  top       intStep1Top + 25px
  left      25px
  width     250px

intStep2Height = 100px
intStep2Top = intStep1Top + intStep1Height
div.step2
  position   absolute
  top        intStep2Top
  left       intRoundStepsLeft
  width      intRoundStepsWidth
  height     intStep2Height
  border-top 2px solid #6678b1
  font-size  18px

intStep3Height = 110px
intStep3Top = intStep2Top + intStep2Height
div.step3
  position   absolute
  top        intStep3Top
  left       intRoundStepsLeft
  width      intRoundStepsWidth
  height     intStep3Height
  border-top 2px solid #6678b1
  font-size  18px

intRuleTableTop = 300px + down
intRuleTableLeft = 230px + right
div#int-task-ruleTable
  z-index   0
  position  absolute
  top       intStep3Top + 20px
  left      intRuleTableLeft
  width     250px


intResultTop  = 80px + down
intResultLeft = 500px + right
div#int-result-header
  position absolute
  top      intResultTop
  left     intResultLeft
div#int-result-header
  table-layout fixed
div#int-result-header caption
  font-size   17px
  font-weight bold
div#int-result-header th
  width   65px
  height  60px
  font-size 17px
  border-top    2px solid #6678b1
  border-bottom 2px solid #6678b1
  border-left   2px white solid
  border-right  2px white solid
div#int-result-header th.leftb
  border-left 2px solid #6678b1
div#int-result-header th.otherClaims
  width 200px

intResultHeaderHeight = 90px
intResultBodyTop      = intResultTop + intResultHeaderHeight
intResultBodyHeight   = 300px
div#int-result-body-v1
div#int-result-body-v2
  z-index     0
  position    absolute
  top         intResultBodyTop
  left        intResultLeft
  height      intResultBodyHeight
  overflow-y  scroll
div.resultbody
  table-layout fixed
div.resultbody td
  text-align    center
  border-left   2px white solid
  border-right  2px white solid
  width         65px
  height        50px
  font-size     19px
div.resultbody td.leftb
  border-left   2px solid #6678b1
div.resultbody tr.borderAroundDashed td
  border-top    2px black dashed
  border-bottom 2px black dashed
div.resultbody td.borderLeftDashed
  border-left   2px black dashed
div.resultbody td.borderRightDashed
  border-right  2px black dashed
div.resultbody td.otherClaims
  font-size 20px
  width     200px

div#int-avgreward
  position    absolute
  top         intResultBodyTop + intResultBodyHeight
  left        intResultLeft + 260px
  height      50px
  font-size   20px
  font-weight bold


img#eg-MM-MM
img#eg-MM-GB
img#eg-GB-MM
  z-index 5
  position absolute

a.help:link,a.help:visited,a.help:hover
  text-decoration none
  color #000000

a.help
  cursor help

span.textUnderline
  text-decoration underline

li
  text-align left

