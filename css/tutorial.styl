div.tutorialCont
  margin 0 auto
  position relative
  width 1024px
  height 750px

div.step
div.image
img.image
div#ruleTableTutorial
div#interfaceTutorial
  display none

div.tutorial
  position  absolute
  top       50px
  left      10px
  width     300px
  height    300px
  text-align center

div.tutorial .step
  border 6px outset #B8E9B8
  padding 10px 4px 2px 4px
  background-color #E4F7E4
  
div#ruleTableTutorial
  z-index 5
  position absolute
  width 250px
 
    
///////////////////////////////////////       
// Payment rule table
div#ruleTableTutorial
  border-collapse collapse
  table-layout fixed
  
div#ruleTableTutorial caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold

div#ruleTableTutorial th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1

div#ruleTableTutorial td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1

div#ruleTableTutorial th.leftb, td.leftb
  border-left 2px solid #6678b1

div#ruleTableTutorial col.colRuleYourReport
div#ruleTableTutorial col.colRuleOtherReport
div#ruleTableTutorial col.colRuleYourReward
  width 75px    
    
    
///////////////////////////////////////    
// Interface of game    
intTaskTitleTop = 50px
div#int-task-title 
  position   absolute
  top        intTaskTitleTop  
  left       0px
  width      1024px
  height     25px
  text-align center
  font-size  19px    
    
intRoundIndexTop    = 80px
intRoundStepsLeft   = 0px
intRoundStepsWidth  = 450px
intRoundIndexHeight = 25px
div#int-task-roundIndex
  position  absolute
  top       intRoundIndexTop
  left      intRoundStepsLeft
  width     intRoundStepsWidth
  height    intRoundIndexHeight
  font-size 18px   
    
intStep1Height  = 120px
intStep1Top     = intRoundIndexTop + intRoundIndexHeight 
div#int-task-step1
  position    absolute
  top         intStep1Top
  left        intRoundStepsLeft
  width       intRoundStepsWidth
  height      intStep1Height
  border-top  2px solid #6678b1
  font-size   18px
div#int-task-step1pic
  z-index   0 
  position  absolute
  top       intStep1Top + 20px
  left      25px
  width     250px    

intStep2Height = 100px
intStep2Top = intStep1Top + intStep1Height
div#int-task-step2
  position   absolute
  top        intStep2Top 
  left       intRoundStepsLeft   
  width      intRoundStepsWidth  
  height     intStep2Height 
  border-top 2px solid #6678b1
  font-size  18px
div#int-task-step2 img
  vertical-align middle
div#int-task-step2 span
  line-height 40px    
    
    
intStep3Height = 110px  
intStep3Top = intStep2Top + intStep2Height 
div#int-task-step3
  position   absolute
  top        intStep3Top
  left       intRoundStepsLeft
  width      intRoundStepsWidth
  height     intStep3Height  
  border-top 2px solid #6678b1
  font-size  18px
div#int-task-step3 img
  vertical-align middle    
    
intRuleTableTop = 300px
intRuleTableLeft = 230px
div#int-task-ruleTable
  z-index   0
  position  absolute
  top       intStep3Top + 20px
  left      intRuleTableLeft 
  width     250px
    
div#int-task-ruleTable
  border-collapse collapse
  table-layout fixed
div#int-task-ruleTable caption
  font-size       17px
  padding-bottom  10px
  font-weight     bold
div#int-task-ruleTable th   
  font-size     16px
  text-align    center
  border-bottom 2px solid #6678b1
div#int-task-ruleTable td
  font-size     19px
  text-align    center
  border-bottom 1px solid #6678b1
div#int-task-ruleTable th.leftb, td.leftb
  border-left 2px solid #6678b1
div#int-task-ruleTable col.colRuleYourReport
div#int-task-ruleTable col.colRuleOtherReport
div#int-task-ruleTable col.colRuleYourReward
  width 75px
    
    
    
    
