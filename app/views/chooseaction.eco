<div>
  <form>
		<p>
      <% if @action: %>
        <span>You have chosen to report <%= @action %></span>
      <% else: %>
        <span>Please choose a color to report:</span>
        <select>
          <option value="Red">Red</option>
          <option value="Green">Green</option>
        </select>
        <button>Confirm Color</button>
      <% end %>
    </p>
  </form>
</div>